#profile-container {
    min-height: calc(90% - 52px);
    width: calc(100% - 80px);
    margin: 40px 40px 0px 40px;;
    text-align: center;
    
    #username {
        height: 70px;
        font-size: 50px;
        padding: 10px;
    }
    
    input {
        width: 80%;
        padding: 0 11px 0 13px;
        font-family: Lato;
        font-size: 15px;
        font-weight: 300;
        text-overflow: ellipsis;
        border: 1px solid #ccc;
        border-radius: 2px 0 0 2px;
        box-sizing: border-box;
        height: 32px;
        transition: .5s;
    }
    
    ul {
        list-style-type: none;
        padding-left:0;
        margin: 0 auto;
        margin-top: 10px;
        
        li {
            display: inline-block;
            border: 1px solid #ccc;
            margin: 2px 4px;
            padding: 1px 10px;
            font-size: 13px;
            cursor: pointer;
            transition: .5s;
            
            .content {
                vertical-align: middle;
            }
        }
    }
    
    #likes-container {
        left: 35%;
        width: 30%;
        display: inline-block;
        vertical-align: top;
        
        #likes-input {
            text-align: center;
            &:focus {
                border-color: green;
                transition: .5s;
                outline: none;
            }            
        }
        
        ul li {
            color: green;
            
            &:hover {
                background-color: #ececec;
                transition: .5s;
                .likes-remove {
                    background: transparent url('/assets/img/close-green.png') no-repeat center center;  
                    background-size: 10px 10px;
                }
            }
            
            .likes-remove {
                height: 10px;
                width: 10px;
                display: inline-block;
                background: transparent url('/assets/img/circle-green.png') no-repeat center center;  
                background-size: 10px 10px;
                margin-left: 5px;
                vertical-align: middle;
            }
        }
    }

    #dislikes-container {
        left: 5%;
        width: 30%;
        display: inline-block;
        vertical-align: top;
        
        #dislikes-input {
            text-align: center;
            &:focus {
                border-color: orange;
                transition: .5s;
                outline: none; 
            }            
        }
        
        ul li {
            color: orange;
            
            &:hover {
                background-color: #ececec;
                transition: .5s;
                .dislikes-remove {
                    background: transparent url('/assets/img/close-orange.png') no-repeat center center;  
                    background-size: 10px 10px;
                }
            }
            
            .dislikes-remove {
                height: 10px;
                width: 10px;
                display: inline-block;
                background: transparent url('/assets/img/circle-orange.png') no-repeat center center;  
                background-size: 10px 10px;
                margin-left: 5px;
                vertical-align: middle;
            }
        }
    }

    #restrictions-container {
        right: 5%;
        width: 30%;
        display: inline-block;
        vertical-align: top;
        
        #restrictions-possible-container:hover {
            #restrictions-possible-title {
                border-bottom: 1px solid blue;
                transition: .5s;
            }
        }
        
        #restrictions-forbidden-container:hover {
            #restrictions-forbidden-title {
                border-bottom: 1px solid red;
                transition: .5s;
            }
        }
        
        #restrictions-possible-title, #restrictions-forbidden-title {
            color: black;
            padding-bottom: 5px;
            width: 80%;
            border-bottom: 1px solid #ccc;
            margin: 0 auto;
            margin-top: 5px;
            margin-bottom: 13px;
            transition: .5s;
        }
        
        #restrictions-possible {
            color: blue;
        }
        
        #restrictions-forbidden {
            color: red;
        }

        ul li {            
            &:hover {
                background-color: #ececec;
                transition: .5s;
                
                .restrictions-forbid {
                    background: transparent url('/assets/img/check-blue.png') no-repeat center center;  
                    background-size: 10px 10px;
                }
                
                .restrictions-unforbid-keyword {
                    background: transparent url('/assets/img/close-red.png') no-repeat center center;  
                    background-size: 10px 10px;
                }
                
                .restrictions-unforbid-singleword {
                    background: transparent url('/assets/img/close-red.png') no-repeat center center;  
                    background-size: 10px 10px;
                }               
            }
            
            .keyword-forbidden {
                color: red;
            }
                        
            .restrictions-forbid {
                height: 10px;
                width: 10px;
                display: inline-block;
                background: transparent url('/assets/img/circle-blue.png') no-repeat center center;  
                background-size: 10px 10px;
                margin-left: 5px;
                vertical-align: middle;
            }
            
            .restrictions-unforbid-keyword {
                height: 10px;
                width: 10px;
                display: inline-block;
                background: transparent url('/assets/img/check-red.png') no-repeat center center;  
                background-size: 10px 10px;
                margin-left: 5px;
                vertical-align: middle;
            }
            
            .restrictions-unforbid-singleword {
                height: 10px;
                width: 10px;
                display: inline-block;
                background: transparent url('/assets/img/circle-red.png') no-repeat center center;  
                background-size: 10px 10px;
                margin-left: 5px;
                vertical-align: middle;
            }
        }
    }
    
    #btn_profile_recommend {
        background-color: green;
        border-radius: 2px;
        border: 1px solid green;
        display:inline-block;
        cursor:pointer;
        color: white;
        font-family: Lato;
        font-size: 18px;
        padding: 16px 31px;
        text-decoration: none;
        font-weight: 200;
        margin-top: 20px;
        transition: .5s;
        
        &:hover {
            background-color: blue;
            border: 1px solid blue;
            transition: .5s;
        }
    }
}
