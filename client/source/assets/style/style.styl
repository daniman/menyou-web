@media (min-width: 805px) {
	#pac-input:focus {
		border-color: #4d90fe;
		margin-left: -1px;
		padding-left: 14px;  /* Regular padding-left + 1. */
		margin-left: 20px;
		margin-right: 20px;
		width: 301px;
	}
	#pac-input {
		padding: 0 11px 0 13px;
		font-family: Lato;
		font-size: 15px;
		font-weight: 300;
		text-overflow: ellipsis;
		margin-left: 20px;
		margin-right: 20px;
		width: 300px;
	}
	.pac-container {
		font-family: Lato;
	}
	#map-canvas {
		width: calc(100% - 465px);
		height: calc(100% - 52px);
		top: 52px;
		border-right: 1px solid #ccc;
	}
	#menu-container {
		width: 465px;
		height: calc(100% - 52px);
		right: 0px;
		position: absolute;
		top: 52px;
	}
}

