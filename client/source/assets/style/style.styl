html, body {
	height: 100%;
	margin: 0;
	padding: 0;
	font-family: 'Lato', sans-serif;
	font-weight: 300;
}

hr {
  margin: 0px 0px 10px 0px;
  color: #7a7a7a;
  border: 0;
  border-top: 1px solid #eee;
}

@import 'partials/profile'
@import 'partials/map'
@import 'partials/dishes'
@import 'partials/nav'

