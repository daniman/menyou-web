@media (min-width: 760px) {
	#pac-input {
		padding: 0 11px 0 13px;
		font-family: Lato;
		font-size: 15px;
		font-weight: 300;
		text-overflow: ellipsis;
		width: 250px;
		position: absolute;
		top: 10px;
		left: 160px;
	    border: 1px solid #ccc;
	    border-radius: 2px 0 0 2px;
	    box-sizing: border-box;
	    height: 32px;
	    transition: .5s;
	    
	    &:focus {
	    	border-color: green;
	    	transition: .5s;
	    	outline: none;
	    }
	}

	#map-canvas {
		width: calc(100% - 465px);
		height: calc(100% - 52px);
		top: 52px;
		border-right: 1px solid #ccc;
	}
	#menu-container {
		width: 465px;
		height: calc(100% - 52px);
		right: 0px;
		position: absolute;
		top: 52px;
	}
}

@media (min-width: 0px) {
	@media (max-width: 759px) {
		#pac-input {
			display: none;
		}
		#menu-container {
			width: 465px;
			height: calc(100% - 52px);
			right: 0px;
			position: absolute;
			top: 52px;
		}
