html, body {
	height: 100%;
	margin: 0;
	padding: 0;
	font-family: 'Lato', sans-serif;
	font-weight: 300;
}

hr {
  margin: 0px 0px 10px 0px;
  color: #7a7a7a;
  border: 0;
  border-top: 1px solid #eee;
}

#map-canvas {
	/*width: calc(100% - 465px);*/
	height: calc(100% - 52px);
	top: 52px;
	border-right: 1px solid #ccc;
}

#navbar div {
	display: inline;
}

#navbar {
	position: absolute;
	height: 40px;
	padding-bottom: 10px;
	border: 1px solid #ccc;
	width: 100%;
	background-color: white;
}

#logo {
	font-size: 35px;
	margin-left: 20px;
	color: #5D8A31;
	font-weight: 300;
}

#logout {
	position: absolute;
	right: 20px;
	top: 15px;
}

#profile {
	position: absolute;
	right: 100px;
	top: 15px;
}

#profile:hover, #logout:hover {
	color: #5D8A31;
	font-weight: 400;
	cursor: pointer;
}

#menu-container {
	width: 465px;
	height: calc(100% - 52px);
	right: 0px;
	position: absolute;
	top: 52px;
	overflow: scroll;
	background-color: #FCFCF6;
}

#question {
	border: 1px solid pink;
	padding: 10px;
	margin: 10px;
}

#recommendation-container {
	padding: 10px;
	margin: 10px;
}

#recommendation-title {
	font-weight: 400;
	font-size: 20px;
}

.meal {
	margin: 10px 5px 10px 5px;
	border: 1px solid #FCFCF6;
	padding: 5px;
	border-radius: 4px;
}

.meal p {
	margin-top: 0px;
	margin-bottom: 0px;
}

.meal .description {
	font-size: 13px;
	margin-left: 10px;
	font-style: italic;

}

.meal .price {
	font-size: 13px;
	font-style: italic;
	float: right;
}

